
<%= content_tag('p', link_to("<< Previous Page", :controller => "staff", :action => "menu"))%>

<table>
  <tr class = "header">
    <td>Created</td>
    <td>Title</td>
    <td>Author</td>
    <td>Categories</td>
    <td>Status</td>
    <td>Comments</td>
    <td>ID</td>
  </tr>
  
  <% @post.each do |post| %>
    <tr class = "<%= cycle("row1", "row2") %>">
      <td><%= post.created_at.strftime("%m/%d/%y - %I:%m %p") %></td>
      <td><%= post.title %></td>
      <td><%= post.author.display_name if post.author %></td>
      <td><%= post.categories.collect {|cat| cat.name}.join{","} %></td>
      <td><%= post.status %></td>
      <td><%= post.comments_count %></td>
      <td><%= post.id %></td>
      
      <td class = "actions">
        <%= link_to("Preview", :action => "show", :id => post)%>
        <%= link_to("Edit", :action => "edit", :id => post)%>
        <%= link_to("Delete", {:action => "destroy", :id => post}, :confirm => "Are you sure you want to permanetly remove this posts?", :method => :post)%>
      </td>
    </tr>
  <% end %> 
</table>

<br />
<tr><td><%= link_to("Create a New Post >>", :action => "new") %></td></tr>
