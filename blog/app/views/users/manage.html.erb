
<%= content_tag('p', link_to('<< Back', :controller => 'staff', :action => 'menu')) %>

<div class = "userlist left">
  <%= render(:partial => 'listing') %>
</div>
<div class = "userlist right">
  <% if params[:id].blank? %>
    
    <h1>New User</h1>
    
    <%= form_tag({:action => 'manage'}) do %>     
      <%= render(:partial => 'form') %>
      <%= submit_tag("Create", :style => 'margin: 1em 0 1em 180px;') %>
    <% end %>
    
  <% else -%>
  
    <h1>Editing User</h1>
    
    <%= form_tag({:action => 'manage', :id => @user.id}) do %>
      <%= render(:partial => 'form') %>
      <%= submit_tag("Edit", :style => 'margin: 1em 0 1em 180px;') %>
    <% end %>
    
    <%#= link_to('Destroy User', { :action => 'l', :id => @user.id }, :confirm => 'Are you sure you want to permanently delete this user?', :method => :post) %>
    <%= form_tag({:action => 'manage', :id => @user.id}) do %>
      <%= submit_tag('Destroy User')%>
    <% end %>
  <% end %>
  <br />
  
  <%= link_to("Cancel", :action => 'list') %>
</div>