<div id="left-column">
  <p><%= link_to("Back to Main Site", {:action => "list"}, :style => 'font-size: .8em') %></p>
  <%= render(:partial => 'shared/post', :locals => {:post => @blog_post}) %>
  
  <div class="comments">
  <a name="comments"></a>
  <%= render(:partial => 'shared/comment', :collection => @blog_post.approved_comments) %>
  </div>
  
  <% if !@comment.blank? -%>
  <div class="comment-form">
    <%= form_tag(:action => 'add_comment', :id => @blog_post.id) do %>
      <%= render(:partial => 'shared/comment_form') %>
      <%= submit_tag("Submit Comment", :style => "margin-left: 105px;")%>
    <% end %>  
  </div> 
  <% end -%>


</div>

<div id="right-column">
  <%= render(:partial => 'custom/about') %>
  <%= render(:partial => 'shared/categories') %> 
</div>